@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All roles";
}


<h4>List of all roles</h4>
<hr />
@if (Model.Any())
{
    foreach (var role in Model)
    {
        <div class="row">
            <div class="col-md-4">
                <hr />
                <h6>RoleName: @role.Name</h6>
                <br />
                <a class="btn btn-primary" style="width:auto" asp-action="EditRole"
                   asp-controller="Administration" asp-route-id="@role.Id">Edit</a>
                <a class="btn btn-primary" style="width:auto" asp-action="EditRolesOfUsers"
                   asp-controller="Administration" asp-route-id="@role.Id">Add or Remove players in role</a>
            </div>
        </div>
    }
}
else
{
    <h4> No roles yet!</h4>

    <div class="row">
        <div class="col-md-4">
            <h6>Push the button below to create a new one</h6>

            <a class="btn btn-primary" style="width:auto" asp-action="CreateRole"
               asp-controller="Administration">Create a new role</a>
        </div>
    </div>
}
